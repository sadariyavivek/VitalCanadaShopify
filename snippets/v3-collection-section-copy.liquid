      width: 100%;
      padding-left: 20px;
      padding-right: 20px;
    }

    .v1-img-container {
      min-height: 220px;
      max-height: 220px;
    }

    .v1-two-col-right {
      padding-left: 20px;
      justify-content: flex-start;
    }

    .v1-two-col-right .v1-section h2 {
      font-size: 50px;
      line-height: 1.5em;
      padding-left: 20px;
      padding-right: 20px;
    }

    .v1-collection-slider .v1-section p {
      font-size: 18px !important;
      text-align: left;
      padding-left: 0;
      padding-right: 20px;
      font-weight: 400;
      -webkit-font-smoothing: antialiased;
      -webkit-font-smoothing: subpixel-antialiased;
    }
    .featured-benefit-section .v1-section h2 {
      font-size: 50px;
      line-height: 1.5em;
      padding-left: 0px !important;
      padding-right: 0px !important;
    }

    .v1-collection-slider .v1-section-inner {
      padding-bottom: 0px;
      padding-top: 35px;
    }

    .v1-collection-slider .v3-section h4 {
      font-size: 22px;
      line-height: 26px;
      padding-left: 20px;
    }

    .v1-full-col {
      margin-top: 0px;
    }


    .products-slider.slider-gallery .gallery-cell.visible-3 {
      width: calc(60%) !important;
    }

    .v1-collection-slider .slider-gallery  {
      margin-bottom: -10px;
    }

    .v1-collection-slider .homepage-product-slider {
      width: 100vw !important;
      padding-bottom: 0px !important;
    }

    .v1-circle-fill , .v1-circle-fill-two {display:none;}



    .v3-section .flickity-prev-next-button.previous {
      left: 5px !important;
    }
    .v3-section .flickity-prev-next-button.next {
      right: 5px !important;
    }

    .v1-circle-fill , .v1-circle-fill-two {display:none;}


    .v1-collection-slider .slider-gallery .gallery-cell {
      width: calc(60%) !important;
    }
    .v1-sg-approved-button, .v1-section .thumbnail button.action_button.add_to_cart {
      width: 100% !important;
    }

    .thumbnail .inline_purchase button.add_to_cart .text {
      font-size: 22px !important;
    }


    .v3-section {
      padding-top: 0px !important;
      margin-bottom: -35px !important;
    }

    .v3-section .slider-gallery {
