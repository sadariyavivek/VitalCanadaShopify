  }

  .v3-section .slider-gallery .thumbnail .product-info__caption {
    display: block;
    margin-top: 0px !important;
    margin-bottom: 0px !important;
  }  

  .v1-product-form-mini {
    max-width: 80%;
    margin: 0 auto;
  }


  .v3-section .slider-gallery {
