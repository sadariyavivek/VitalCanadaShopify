<style>

.buy-box-container {
    border: 1px solid #E5E5E5;
    border-radius: 1px;
    margin-top: 20px;
}

.inner-cta-container {
    padding: 20.5px 18.5px;
}

.inner-disclaimer-container {
    background-color: #F5F5F5;
    padding: 20.5px 15.5px;
}

.inner-disclaimer-container span {
    font-style: oblique;
    font-size: 12px;
    color: #666666;
    font-weight: 500;
    line-height: 16px;
    display: block;
}

.packaging-options-container {
    margin-bottom: 10px;
}

.packaging-options-container .packaging-options-label {
    color: #393D40;
    font-size: 12px;
    line-height: 16px;
    letter-spacing: 0.43px;
    text-transform: capitalize;
}

.packaging-options-list {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-top: 10px;
    margin-bottom: 10px;
}

.packaging-option {
    height: 53px;
    width: 53px;
    margin-right: 9px;
    border: 3px solid #E5E5E5;
    border-radius: 1px;
    background: white;
    padding: 0;
    min-height: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: .15s opacity linear;
    overflow: hidden;
}

.packaging-option:hover {
    cursor: pointer;
    opacity: 0.75;
    background: none;
    border: 3px solid #1BB9E6;
}
.packaging-option.active {
    border: 3px solid #1BB9E6;
}

.packaging-option.active:hover {
    opacity: 1;
    cursor: initial;
}

.packaging-option img {
    height: 100%;
    object-fit: contain;
    display: none;
}

.packaging-option img.active {
    display: block;
}

.variant-title {
    font-size: 13px;
    display: block;
    line-height: 13px;
    font-weight: 500;
    color: #333333;
}

.subscription-explanation-section span {
    text-align: center;
    font-size: 13px;
    display: block;
    line-height: 19px;
    color: #333333;
}

.subscription-explanation-section span.bolded {
    font-weight: bold;
}

.subscribe-button {
    border-radius: 3px;
    background-color: #215D6B;
    padding: 11px;
    color: white;
    text-align: center;
    margin-bottom: 10px;
    transition: .15s opacity linear;
    cursor: pointer;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    position: relative;
    width: 100%;
    min-height: initial;
    height: initial;
}

.subscribe-button:hover {
    opacity: 0.75;
    border: 0;
    background-color: #215D6B;
}

.subscribe-button .text-container {
    position: relative;
    flex-grow: 1;
}

.subscribe-button .chevron {
    position: absolute;
    right: 10px;
}

.subscribe-button .main-text {
    text-transform: capitalize;
    display: block;
    font-size: 22px;
    line-height: 30px;
    letter-spacing: 0.4px;
    font-weight: bold;
}

.subscribe-button .secondary-text {
    font-size: 13px;
    display: block;
    line-height: 19px;
    font-style: oblique;
}

.one-time-purchase-button {
    padding: 10px;
    transition: .15s all linear;
    cursor: pointer;
    text-align: center;
    display: flex;
    align-items: center;
    background: none;
    width: 100%;
    min-height: initial;
    height: initial;
}

.one-time-purchase-button.no-subscribe {
    background-color: #355C7E !important;
    border-radius: 3px;
    padding: 11px;
}

.one-time-purchase-button.no-subscribe .main-text {
    color: white;
    border-bottom: 0;
}

.one-time-purchase-button:hover {
    opacity: 0.75;
    border: none;
    background: none;
}

.one-time-purchase-button.no-subscribe:hover {
    background-color: #355C7E !important;
    opacity: 0.75;
    border: none;
}

.one-time-purchase-button .main-text {
    color: #014E70;
    text-align: center;
    font-size: 15px;
    font-weight: bold;
    line-height: 19px;
    display: inline-block;
    border-bottom: 1px solid #014E70;
}

.one-time-purchase-button .cart-icon {
    margin-right: 6px;
    display: inline-block;
}

.one-time-purchase-button.no-subscribe .cart-icon * {
    stroke: white !important;
}

.or-block {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    margin-top: 10px;
}
.or-line {
    border-bottom: 1px solid #c7c7c7;
    width: 30%;
    display: block;
}

.or-text {
    display: block;
    background: white;
    padding: 6px;
    margin-left: 4px;
    margin-right: 4px;    
    line-height: 19px;
    font-size: 13px;
    font-weight: bold;
}

.out-of-stock-container {
    text-align: center;
    font-size: 16px;
    font-weight: bold;
    color: white;
    background: gray;
    border-radius: 6px;
    padding: 11px;
    display: block;
}

.frequency-modal-outer {

    pointer-events: none;
    position: fixed;
    height: 100vh;
    width: 100vw;
    top: 0;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10000;
    transition: .2s opacity ease-in-out;
    background: rgba(0,0,0,0.4);
    opacity: 0;
}

.frequency-modal-outer.active {

    pointer-events: initial;
    opacity: 1;
}

.frequency-modal-outer .frequency-modal-inner {
    transition: .2s transform ease-in-out, .2s opacity ease-in-out;
    position: relative;
    opacity: 0;
    transform: translateY(100px);
    max-width: 100%;
    width: 375px;
    border-radius: 6px;
    padding: 20px;
    padding-top: 10px;
    background: white;
    box-shadow: 0 2px 5px 2px rgba(0,0,0,0.1);
}

.frequency-modal-outer.active .frequency-modal-inner {
    opacity: 1;
    transform: translateY(0);
}

.frequency-modal-inner .modal-close {
    font-size: 13px;
    margin-bottom: 10px;
    display: block;
    color: #4a4a4a;
    position: absolute;
    right: 20px;
    top: -40px;
}

.frequency-modal-inner .modal-close:hover {
    opacity: 0.75;
}

.frequency-modal-inner .modal-header {
    font-size: 20px;
    line-height: 28px;
    font-weight: bold;
    text-align: center;
    margin-bottom: 0;
}

.frequency-modal-inner .modal-product-title {
    font-size: 13px;
    line-height: 17px;
    text-align: center;
    margin-bottom: 0;
}

.frequency-modal-inner .modal-variant-title {
    font-size: 13px;
    line-height: 17px;
    text-align: center;
    margin-bottom: 0;
}

.frequency-modal-inner .frequency-selection-container {
    margin-top: 25px;
}

.frequency-modal-inner .frequency-select-button {
    width: 100%;
    height: 44px;
    background: white;
    min-height: initial;
    border-radius: 3px;
    border: 1px solid #E5E5E5;
    margin-bottom: 9.5px;
    color: #4a4a4a;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    transition: .1s all linear;
    padding-left: 10px;
    padding-right: 10px;
}

.frequency-modal-inner .frequency-select-button:hover {
    background-color: #01AF99;
    color: white;
    opacity: 0.7;
}

.frequency-select-button.default {
    background-color: #01AF99;
    color: white;
}

.frequency-modal-inner .frequency-select-button.default .modal-pricing .strikethrough-price {
    color: white;
}

.frequency-modal-inner .frequency-select-button.default .modal-pricing .discount-price {
    color: white;
}

.frequency-select-button.default .modal-pricing .chevron polyline {
    stroke: white !important;
}

.frequency-modal-inner .frequency-select-button.default .frequency-label .cart-icon {
    stroke: white !important;
}

.frequency-modal-inner .frequency-select-button .frequency-label {
    font-size: 17px;
    font-weight: bold;
    line-height: 26px;
    display: flex;
    align-items: center;
}

.frequency-modal-inner .frequency-select-button .frequency-label .cart-icon {
    margin-right: 10px;
    stroke: #000;
}

.frequency-select-button .modal-pricing {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.frequency-modal-inner .frequency-select-button .modal-pricing .strikethrough-price {
    font-size: 13px;
    font-weight: 500;
    line-height: 26px;
    margin-right: 10px;
}

.frequency-modal-inner .frequency-select-button:hover .modal-pricing .discount-price {
    color: white;
}

.frequency-select-button .modal-pricing .chevron {
    margin-left: 6px;
    stroke: #000;
}

.frequency-modal-inner .frequency-select-button .modal-pricing .discount-price {
    font-size: 17px;
    font-weight: 900;
    line-height: 26px;
    color: #01AF99;
}

.inner-disclaimer-container.modal-disclaimer {
    display: none;
}

@media (max-width: 480px) {
    .frequency-modal-outer {
        align-items: flex-end;
    }

    .frequency-modal-outer .frequency-modal-inner {
        padding: 0;
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100vw;
        border-radius: 10px;
    }

    .modal-content-wrapper {
        padding: 20px;
    }

    .inner-disclaimer-container.modal-disclaimer {
        display: block;
    }

    .buy-box-container {
        border: 0;
        margin-top: 0;
    }

    .subscribe-button {
        padding: 11px 16px;
    }

    .inner-cta-container {
        padding-bottom: 10px;
        padding-top: 0;
    }

    .pdp-redesign-wrapper .buy-box-container .quantity-wrapper {
        padding-left: 0;
        padding-right: 0;
        padding-bottom: 30px;
        padding-top: 10px;
    }
}
