        $('.packaging-options-container .packaging-option').each(function(index) {
            var activeImageCount = $(this).find('img.active').length;
            if (activeImageCount === 0) {
                $(this).hide();
                $(this).attr('disabled', true);
            } else {
                $(this).show();
                $(this).removeAttr('disabled');
            }
        });
    }
    
