<div class="buy-box-container">
    <div class="inner-cta-container">
        {% comment %} Need to account for multiple options here{% endcomment %}
        {% for option in product.options_with_values %}
            <div class="packaging-options-container option-{{ option.position }}">
                <span class="packaging-options-label">{{ option.name }}</span>
                <div class="packaging-options-list">
                    {% comment %}
                    {% for variant in product.variants %}
                        <button
                        data-variant-title="{{ variant.title }}" 
                        data-variant-standard-price="{{ variant.price | money_without_trailing_zeros}}"
                        data-variant-subscription-price="{{ variant.metafields.subscriptions.discount_variant_price }}" 
                        data-variant-id="{{ variant.id }}" 
                        data-variant-subscription-id="{{ variant.metafields.subscriptions.discount_variant_id }}" 
                        data-option="{{ variant.option1}}"
                        role="button" 
                        class="packaging-option {% if variant.id == initialVariant.id %}active{% endif %}">
                            <img src="{{ variant.image | img_url: '50x' }}"/>
                        </button>
                    {% endfor %}
                    {% endcomment %}
                    {% for option_value in option.values %}
                        <button
                            role="button"
                            class="packaging-option {% if initialVariant.option1 == option_value or initialVariant.option2 == option_value or initialVariant.option3 == option_value %} active {% endif %}"
                            data-option="{{ option_value }}"
                            data-option-position="{{ option.position }}"
                            aria-label="Select {{ option_value }}"
                        >
                        {% for variant in product.variants %}
                            {% if option.position == 1 %}
                                {% if variant.option1 == option_value %}
                                    {% comment %}  and variant.option2 == initialVariant.option2 and variant.option3 == initialVariant.option3 {% endcomment %}
                                    <img alt="{{ variant.title }}" class="lazyload {% if variant.option2 == initialVariant.option2 and variant.option3 == initialVariant.option3 %} active {% endif %}" data-option2="{{ variant.option2 }}" data-option3="{{ variant.option3 }}" data-src="{{ variant.image | img_url: '80x' }}" alt="{{ option_value }}"/>
                                {% endif %}
                            {% elsif option.position == 2 %}
                                {% if variant.option2 == option_value %}
                                    {% comment %}  and variant.option1 == initialVariant.option1 and variant.option3 == initialVariant.option3 {% endcomment %}
                                    <img alt="{{ variant.title }}" class="lazyload {% if variant.option1 == initialVariant.option1 and variant.option3 == initialVariant.option3 %} active {% endif %}" data-option1="{{ variant.option1 }}" data-option3="{{ variant.option3 }}" data-src="{{ variant.image | img_url: '80x' }}" alt="{{ option_value }}"/>
                                {% endif %}
                            {% elsif option.position == 3 %}
                                {% if variant.option3 == option_value %}
                                    {% comment %}  and variant.option1 == initialVariant.option1 and variant.option2 == initialVariant.option2 {% endcomment %}
                                    <img alt="{{ variant.title }}" class="lazyload {% if variant.option1 == initialVariant.option1 and variant.option2 == initialVariant.option2 %} active {% endif %}" data-option1="{{ variant.option1 }}" data-option2="{{ variant.option2 }}" data-src="{{ variant.image | img_url: '80x' }}" alt="{{ option_value }}"/>
                                {% endif %}
                            {% endif %}
                        {% endfor %}
                        </button>
                    {% endfor %}
                </div>
                <span class="variant-title option-{{ option.position }}">
                    {% if option.position == 1 %}
                        {{ initialVariant.option1 }}
                    {% elsif option.position == 2 %}
                        {{ initialVariant.option2 }}
                    {% elsif option.position == 3 %}
                        {{ initialVariant.option3 }}
                    {% endif %}
                </span>
            </div>
        {% endfor %}
        {% render 'pdp-quantity-select' %}
        <div class="cta-section-v2-container" {% if initialVariant.available == false %} style="display: none;" {% endif %}>
            {% if product.metafields.subscriptions.has_subscription %}
                <button class="subscribe-button opt-atb-subscription" role="button">
                    <div class="text-container">
                        <span class="main-text">Subscribe &amp; Save</span>
                        <span class="secondary-text">Select frequency (From <span class="subscription-price">${{ initialVariant.metafields.subscriptions.discount_variant_price }}</span>/week)</span>
                    </div>
                </button>
                <div class="subscription-explanation-section">
                    <span class="bolded">{{ product.metafields.subscriptions.discount_percentage | round }}% discount, Free Shipping, and Free samples *</span>
                    <span>Cancel or change frequency any time</span>
                </div>
                <div class="or-block">
                    <div class="or-line left"></div>
                    <span class="or-text">or</span>
                    <div class="or-line right"></div>
                </div>
            {% endif %}
            <button type="submit" class="one-time-purchase-button opt-atb-one-time {% if product.metafields.subscriptions.has_subscription == False %} no-subscribe {% endif %}">
                <span class="main-text">Purchase one-time for <span class="one-time-price">{{ initialVariant.price | money_without_trailing_zeros }}</span></span>
            </button>
        </div>
        <div class="out-of-stock-container" {% if initialVariant.available == true %} style="display: none;" {% endif %}>
            <span>Sold out</span>
        </div>
    </div>
    <div class="inner-disclaimer-container">
        <span>* Receive {% if product.metafields.subscriptions.discount_percentage %}{{ product.metafields.subscriptions.discount_percentage | round }} {% else %}25{% endif %}% off your first order and 15% off each order after (plus free shipping) when you subscribe. Other restrictions may apply.</span>
    </div>
    <div id="frequency-modal" class="frequency-modal-outer">
        <div class="frequency-modal-inner">
            <div class="modal-content-wrapper">
                <a href="#" class="modal-close"><svg xmlns='http://www.w3.org/2000/svg' width='25' height='25' viewBox='0 0 512 512'><title>ionicons-v5-l</title><line x1='368' y1='368' x2='144' y2='144' style='fill:none;stroke:#fff;stroke-linecap:round;stroke-linejoin:round;stroke-width:32px'/><line x1='368' y1='144' x2='144' y2='368' style='fill:none;stroke:#fff;stroke-linecap:round;stroke-linejoin:round;stroke-width:32px'/></svg></a>
                <p class="modal-header">Select subscription frequency</p>
                <p class="modal-product-title">{{ product.title }}</p>
                <p class="modal-variant-title">{{ initialVariant.title }}</p>
                <div class="frequency-selection-container">
                    {% assign subscriptionIntervals = product.metafields.subscriptions.shipping_interval_frequency | split: ',' %}
                    {% assign subscriptionUnitType = product.metafields.subscriptions.shipping_interval_unit_type %}
                    {% assign lastLetter = subscriptionUnitType | size | minus: 1 %}
                    {% assign subscriptionUnitTypeSingle = subscriptionUnitType | slice: 0, lastLetter %}
                    {% for interval in subscriptionIntervals %}
                        <button data-interval="{{ interval }}" class="frequency-select-button {% if interval == settings.default_subscription_frequency %}default{% endif %}">
                            <span class="frequency-label"><svg xmlns='http://www.w3.org/2000/svg' class="cart-icon" width='20' height='20' viewBox='0 0 512 512'><title>ionicons-v5-d</title><circle cx='176' cy='416' r='16' style='fill:none;stroke-linecap:round;stroke-linejoin:round;stroke-width:32px'/><circle cx='400' cy='416' r='16' style='fill:none;stroke-linecap:round;stroke-linejoin:round;stroke-width:32px'/><polyline points='48 80 112 80 160 352 416 352' style='fill:none;stroke-linecap:round;stroke-linejoin:round;stroke-width:32px'/><path d='M160,288H409.44a8,8,0,0,0,7.85-6.43l28.8-144a8,8,0,0,0-7.85-9.57H128' style='fill:none;stroke-linecap:round;stroke-linejoin:round;stroke-width:32px'/></svg>Every {{ interval }} {{ interval | plus: 0 | pluralize: subscriptionUnitTypeSingle, subscriptionUnitType }}</span>
                            <div class="modal-pricing">
                                <span class="strikethrough-price"><s>{{ initialVariant.price | money_without_trailing_zeros }}</s></span>
                                <span class="discount-price">${{ initialVariant.metafields.subscriptions.discount_variant_price }}</span>
                                <svg class="chevron" xmlns='http://www.w3.org/2000/svg' width='20' height='20' viewBox='0 0 512 512'><title>ionicons-v5-a</title><polyline points='184 112 328 256 184 400' style='fill:none;stroke-linecap:round;stroke-linejoin:round;stroke-width:48px'/></svg>
                            </div>
                        </button>
                    {% endfor %}
                </div>
            </div>
            <div class="inner-disclaimer-container modal-disclaimer">
                <span>* Receive {% if product.metafields.subscriptions.discount_percentage %}{{ product.metafields.subscriptions.discount_percentage | round }} {% else %}25{% endif %}% off your first order and 15% off each order after (plus free shipping) when you subscribe. Other restrictions may apply.</span>
            </div>
        </div>
    </div>
    <div class="hidden-input pid-{{ product.id }}">
        <input type="hidden" class="variant-id" name="id" value="{{ initialVariant.id }}" />
        <input class="frequency-num" {% if hasSubscription %}name="properties[shipping_interval_frequency]"{% endif %} type="hidden" value="{{ settings.default_subscription_frequency }}" >
        <input class="frequency-type" {% if hasSubscription %}name="properties[shipping_interval_unit_type]"{% endif %} type="hidden" value="{{ product.metafields.subscriptions.shipping_interval_unit_type }}">
    </div>
</div>

<script>
    var variants = [];

    {% for variant in product.variants %}
        var variant = {{ variant | json }};
        var variantSubscriptionMetafields = {{ variant.metafields.subscriptions | json }};
        var variantAdditionalMetafields = {{ variant.metafields.vital | json }};
        
        variant.subscription_info = variantSubscriptionMetafields;
        variant.additional_info = variantAdditionalMetafields;
        variant.display_price = "{{ variant.price | money_without_trailing_zeros }}";

        variants.push(variant);
    {% endfor %}

    $(document).ready(function(e) {
        hideUnselectableOptions();
    });

    $(document).on('click', '.frequency-modal-outer.active', function(e) {
        e.preventDefault();

        if (e.target === this) {
            closeModal();
        }
    });

    $(document).on('click', '.packaging-option', function(e) {
        e.preventDefault();

        // Change to accept multiple options. 
        // 1.) Get all selected options 
        // 2.) Construct JSON of variant
        // 3.) Get info for variant with matching option values
        var selectedProductInfo = $(this).data();
        var optionIndex = selectedProductInfo.optionPosition;

        // Change active only the selected option index (e.g. only size, only flavor, etc.)
        $('.packaging-options-container.option-' + optionIndex + ' .packaging-option').removeClass('active');
        $(this).addClass('active');

        var variantInfo = getSelectedVariantDetails();

        updateVariantTitle(variantInfo, optionIndex);
        updateOneTimeDisplayPrice(variantInfo.display_price);
        updateSubscriptionDisplayPrice(variantInfo.subscription_info.discount_variant_price);
        updateVariantContent(variantInfo.id);
        updateAvailableOptions(variantInfo, optionIndex);
        setQueryStringParameter("variant", variantInfo.id);
    });

    $(document).on('mousedown', '.packaging-option', function(e) {
        e.preventDefault();
    });

    $(document).on('click', '.cta-section-v2-container .subscribe-button', function(e) {
        e.preventDefault();
        //$('#frequency-modal').addClass('active');
        var variantInfo = getSelectedVariantDetails();

        $('.hidden-input .variant-id').val(variantInfo.subscription_info.discount_variant_id);

        $('.hidden-input .frequency-num').attr('name', 'properties[shipping_interval_frequency]');
        $('.hidden-input .frequency-type').attr('name', 'properties[shipping_interval_unit_type]');
        $('.hidden-input .frequency-num').val(4);
        
        $('.js-product_section .product_form').submit();
    });

    $(document).on('click', '.one-time-purchase-button', function(e) {
        var variantInfo = getSelectedVariantDetails();

        $('.hidden-input .variant-id').val(variantInfo.id);

        $('.hidden-input.pid-{{ product.id }} .frequency-num').removeAttr('name');
        $('.hidden-input.pid-{{ product.id }} .frequency-type').removeAttr('name');
        $('.js-product_section .product_form').submit();
    });

    $(document).on('click', '.modal-close', function(e) {
        e.preventDefault();
        closeModal();
    });

    $(document).on('click', '.frequency-select-button', function(e) {
        e.preventDefault();

        var variantInfo = getSelectedVariantDetails();
        $('select[name="id"] option:selected').val(variantInfo.id);

        $('.hidden-input .frequency-num').attr('name', 'properties[shipping_interval_frequency]');
        $('.hidden-input .frequency-type').attr('name', 'properties[shipping_interval_unit_type]');
        $('.hidden-input .frequency-num').val($(this).data('interval'));
        $('.js-product_section .product_form').submit();
        closeModal();
    });

    function updateVariantTitle(variantInfo, optionIndex) {
        $('.variant-title.option-' + optionIndex).text(variantInfo.options[optionIndex - 1]);
        //$('.modal-variant-title').text(title);
    }

    function updateOneTimeDisplayPrice(price) {
        $('.title-price-wrapper .pdp-price').text(price);
        $('.one-time-price').text(price);
        $('.frequency-modal-inner .strikethrough-price s').text(price);
    }

    function updateSubscriptionDisplayPrice(price) {
        $('.cta-section-v2-container .subscription-price').text('$' + price);
        $('.frequency-modal-inner .discount-price').text('$' + price);
    }

    function closeModal() {
        $('#frequency-modal').removeClass('active');
    }

    function getSelectedVariantDetails() {

        var option1 = $('.packaging-options-container.option-1 .packaging-option.active').data('option');
        var option2 = $('.packaging-options-container.option-2 .packaging-option.active').data('option');
        var option3 = $('.packaging-options-container.option-3 .packaging-option.active').data('option');

        var selectedVariant = variants.filter((variant) => {
            if (typeof option3 !== "undefined") {
                return (variant.option1 === option1 && variant.option2 === option2 && variant.option3 === option3);
            } else if (typeof option2 !== "undefined") {
                return (variant.option1 === option1 && variant.option2 === option2);
            } else {
                return (variant.option1 === option1);
            }
        });

        if (selectedVariant.length > 0) {
            return selectedVariant[0];
        } else {
            return;
        }
    }

    function updateAvailableOptions(variantInfo, changedOptionIndex) {
        // Handle swapping of images
        if (changedOptionIndex === 1) {
            $('.packaging-options-container.option-2 .packaging-option img').removeClass('active');
