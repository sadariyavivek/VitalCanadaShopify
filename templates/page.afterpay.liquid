    color: white;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 21px;
    display: block;
    width: fit-content;
    margin-left: auto;
    margin-right: auto;
    transition: .2s all ease-out;
  }
  
  .ap-button:hover {
    color: white;
    opacity: 0.7;
    transform: translateY(-2px);
  }
  
  .ap-button:active, .ap-button:focus {
    color: white;
    opacity: 0.7;
    transform: translateY(-2px);
  }
  
