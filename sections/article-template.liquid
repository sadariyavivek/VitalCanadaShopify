      "type": "checkbox",
      "id": "banner_enabled",
      "label": "Enable blog post banner image",
      "info": "The blog post's featured image will be used as a full-width banner",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "image_darken",
      "label": "Darken banner image",
      "default": false
    },
    {
     "type": "checkbox",
     "id": "blog_breadcrumb",
     "label": "Show breadcrumbs",
     "default": true
    },
    {
     "type": "checkbox",
     "id": "blog_pagination",
     "label": "Show next blog post link",
     "default": true
    },
    {
     "type": "checkbox",
     "id": "blog_tags",
     "label": "Show blog post tags"
    },
    {
     "type": "checkbox",
     "id": "blog_author",
     "label": "Show author"
    },
    {
     "type": "checkbox",
     "id": "blog_date",
     "label": "Show date",
     "default": true
    },
    {
      "type": "checkbox",
      "id": "display_social_buttons",
      "label": "Show social media share icons",
      "default": true
    },
    {
     "type": "checkbox",
     "id": "blog_comment_count",
     "label": "Show comment count",
     "default": true
    },
    {
     "type": "checkbox",
     "id": "read_more_link",
     "label": "Show continue reading link for related blog post",
     "default": true
    },
    {
     "type": "checkbox",
     "id": "blog_additional_posts",
     "label": "Show related blog posts",
     "default": false
    },
    {
     "type": "header",
     "content": "Sidebar"
    },
    {
      "type": "paragraph",
      "content": "Create a sidebar by adding content blocks."
    },
    {
      "type": "checkbox",
      "id": "toggle",
      "label": "Toggle sidebar content",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "post_tags",
      "name": "Blog post tags",
      "limit": 1
    },
    {
      "type": "menu",
