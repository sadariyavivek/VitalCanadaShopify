    background: -webkit-linear-gradient(45deg, #23b6e6, #47c1bf);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  
  .most-recent-post-container .blog-image-container-wrapper {
    height: 240px;
    overflow: hidden;
    border-radius: 0px;
    -webkit-mask-image: -webkit-radial-gradient(white, black);
  }
  
  .most-recent-post-container .blog-image-container-wrapper.taller {
    height: 400px;
  }
  
  .most-recent-post-container .blog-image-container {
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    opacity: 1;
    transition: .5s all cubic-bezier(0.23, 1, 0.32, 1);
  }
  
  .most-recent-post-container .blog-image-container:hover {
    /*transform: scale(1.2);*/
    opacity: 0.6;
  }
  
  .most-recent-posts-container h2 {
    letter-spacing: 1px !important;
    text-transform: uppercase;
    text-align: center;
    margin-left: auto;
    margin-right: auto;
    color: #23b6e6;
      border-top: 2px solid #23b6e6;
      border-bottom: 2px solid #23b6e6;
      padding: 10px 20px;
  }
  
  .most-recent-post-container h4 {
    padding-top: 0px;
    letter-spacing: 0 !important;
    text-transform: capitalize !important;
    text-align: center;
    font-size: 28px;
    transition: .25s all;
    color: #4a4a4a;
  }
  
  .most-recent-post-container h4:hover {
    color: #23b6e6;
  }
  
  .category-title:hover {
    opacity: 0.7;
  }
  
  .featured-post-container h4 {
    padding-top: 0px;
    letter-spacing: 0 !important;
    text-transform: capitalize !important;
    text-align: center;
    font-size: 28px;
    transition: .25s all;
    color: #4a4a4a;
  }
  
  .featured-post-container h4:hover {
    color: #23b6e6;
  }
  
  
  @media screen and (max-width: 800px) {
    
    .featured-posts-container {
      flex-direction: column;
    }
    
    .featured-post-container:not(:last-child) {
      margin-bottom: 40px;
    }
    
    .most-recent-post-container {
      width: 100%;
      margin-bottom: 40px;
    }
    
    .most-recent-posts-container h2 {
      font-size: 24px;
      text-align: center;
      color: #23b6e6;
      border-top: 2px solid #23b6e6;
      border-bottom: 2px solid #23b6e6;
      padding: 10px 20px;
      margin-left: auto;
      margin-right: auto;
      margin-bottom: 40px;
    }
    
    .real-life-profile-container { 
      width: 50%;
    }
    
    .profile-image-container {
      width: 100%;
      height: 120px;
      width: 120px;
    }
  }
</style>

