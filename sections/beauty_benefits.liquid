<script>
$(document).ready(function(){
$('.page-video img').click(function(e) {
     e.preventDefault();
     $('.page-video img').hide();
     $(".page-video div a").addClass("test");
     $('.page-video div a').html('<iframe width="" height="" src="{{ section.settings.iframe_link }}?autoplay=1" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>');
   });
});
