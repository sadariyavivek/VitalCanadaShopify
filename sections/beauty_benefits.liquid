{% schema %}
  {
    "name": "Beauty Benefits",
    "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Your headline"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Promotion description appears here.</p>"
    },
    {
      "type": "image_picker",
      "id": "banner_image2",
      "label": "section3 Image"
    },
    {
      "type": "text",
      "id": "title1",
      "label": "section3 Heading 1",
      "default": "Your headline"
    },
    {
      "type": "html",
      "id": "text1",
      "label": "section3 Text 1",
      "default": "<p>Promotion description appears here.</p>"
    },
    {
      "type": "text",
      "id": "title2",
      "label": "section3 Heading 2",
      "default": "Your headline"
    },
    {
      "type": "html",
      "id": "text2",
      "label": "section3 Text 2",
      "default": "<p>Promotion description appears here.</p>"
    },
    {
      "type": "text",
      "id": "title3",
      "label": "section4 Heading",
      "default": "Your headline"
    },
    {
      "type": "image_picker",
      "id": "banner_image3",
      "label": "Section 4 Image"
    },
    {
      "type": "url",
      "id": "iframe_link",
      "label": "Section 4 Video Link"
    }
    ]
  }
