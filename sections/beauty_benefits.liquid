  <h1 class="headline">
  {{ page.title }}
  </h1>
</div>
</div>
<div class="banner_pages large-hide" style="background: url('{{ section.settings.banner_image | img_url: 'master' }}')">
<div class="caption captionOverlay--true center">
  <h1 class="headline">
  {{ page.title }}
  </h1>
</div>
</div>
<div class="page-step2">
  <h2>
  {{ section.settings.title }}
  </h2>
  <p>{{ section.settings.text }}</p>
</div>
<div class="page-step3 container">
  <div class="five columns">
  <img src="{{ section.settings.banner_image2 | img_url: 'master' }}"/>
</div>
<div class="seven columns">
  <div class="part1">
    <h3>
      {{ section.settings.title1 }}
    </h3>
    <p>
      {{ section.settings.text1 }}
    </p>
  </div>
  <div class="part2">
    <h3>
      {{ section.settings.title2 }}
    </h3>
    <p>
      {{ section.settings.text2 }}
    </p>
  </div>
</div>
</div>
