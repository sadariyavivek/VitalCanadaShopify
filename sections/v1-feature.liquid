<div class="gallery js-flickity" data-flickity-options='{ "wrapAround": true, "lazyLoad": true }'>
  
{% for block in section.blocks %}
  
  <div class="gallery-slide v1-new-hero">   
    <div class="slide-inner-cont">
    {% if block.settings.v1-feature-1-image != blank %}
  <a href=" {{ block.settings.v1-feature-1-link }} " style="position: absolute;
    height: 100%;
    width: 100%;
    max-width: 1440px;
    background-repeat: no-repeat !important;
    background-size: cover !important;
    background: url( {{ block.settings.v1-feature-1-image | img_url: '1800x' }} );"></a>
    {% endif %}
    
    
    {% if block.settings.v1-enable-overlay != false %}
    <div class="v1-new-hero-overlay" style="align-self: {{ block.settings.v1-overlay-alignment }} ;border: 8px solid {{block.settings.v1-feature-1-accent-color}} ;">
  <h3 style="background-color: {{block.settings.v1-feature-1-accent-color}} ;"> {{ block.settings.v1-feature-1-subheading }} </h3>
      <h2 style="color: {{block.settings.v1-feature-1-color}} ; text-decoration-color: {{block.settings.v1-feature-1-accent-color}} !important ; font-size: {{block.settings.v1-feature-font-size}}px ;"> {{ block.settings.v1-feature-1-heading }} </h2>
 		{{ block.settings.v1-feature-1-add-text }}
		<a href=" {{ block.settings.v1-feature-1-link }} " class="cta-button"  style="background-color: {{block.settings.v1-feature-1-color}} ;">{{block.settings.v1-feature-1-button-text}}</a>
  
  </div>
      {% elsif block.settings.v1-enable-overlay == false %}
        <a href=" {{ block.settings.v1-feature-1-link }} " class="v1-slide-full-link"></a>
      {% endif %}
    
    {% if block.settings.v1-mobile-override != false %}
       
    <div class="mobile-override-image">
     <a href=" {{ block.settings.v1-feature-1-link }} "><img src="//cdn.shopify.com/s/files/1/2074/9385/{{ block.settings.v1-mobile-image }}" width="100%" height="auto" />
    </a>
       </div>
    
          {% endif %} 
    </div>  
  </div>
  
  
  {% endfor %}

</div>



<style>
  

  
.v1-feature-slider-section .flickity-page-dots .dot {
    display: inline-block;
    width: 10px;
    height: 10px;
    margin: 0 8px;
    background: #23b6e6;
    border-radius: 50%;
    filter: alpha(opacity=25);
    opacity: 0.25;
    cursor: pointer;
}
  
 .slide-inner-cont {
    width: 100%;
    max-width: 1440px;
    height: 100%;
    display: flex;
   flex-direction:column;
    justify-content: center;
}
  
  
 .v1-feature-slider-section .flickity-slider img {
    border-radius: 0px;
}
  
  .v1-feature-slider-section {max-height: 500px;overflow-y:hidden;}
 
.v1-feature-slider-section .gallery-slide {
  width: 100%;
  height: 500px;
  margin-right: 10px;
  border-radius: 0px;
  position: relative;
  counter-increment: gallery-cell;
}

/* cell number */
.v1-feature-slider-section .gallery-slide:before {
  display: none;
  text-align: center;
  content: counter(gallery-cell);
  line-height: 200px;
  font-size: 80px;
  color: white;
}
  
  
  
.v1-slide-full-link {
    display: block;
    width: 100%;
    height: 100%;
}
  
  
  
  	 
.v1-new-hero {
    width: 100%;
    margin: 0 auto;
    min-height: 500px;
	background-color: #ffffff;
    background-size: cover !important;
    background-position-y: 85% !important;
    justify-content: center;
    align-items: center;
    display: flex;
    flex-direction: column;
    overflow: hidden;
}
  
  .v1-new-hero .gallery-slide-image {position:absolute;z-index:1;}

	 
.v1-new-hero-overlay {
    display: flex;
    margin-right: 10%;
    margin-left: 10%;
    flex-direction: column;
    padding: 25px;
    background: #ffffffde;
    max-width: 40%;
    justify-content: center;
    align-items: center;
    min-width: 33%;
    position: relative;
  	z-index:2;
}
  
.v1-new-hero h3 {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 0px;
    padding-left: 10px;
    padding-right: 10px;
    margin: 0 auto;
}

.v1-new-hero h3 p {
    font-family: 'kapraregular';
    text-align: center;
    font-size: 32px;
    margin: 0px;
    line-height: 1em;
    font-weight: 400;
    letter-spacing: .25px;
    text-transform: uppercase;
    -webkit-font-smoothing: antialiased;
    color: #ffffff;
    margin-bottom: 0px;
    padding: 3px;
    padding-right: 10px;
    padding-left: 10px;
    padding-top: 5px;
}
	 
	 .v1-new-hero h3 p strong {
	     color: #ffffff;
	 }
  
.v1-new-hero h2 p strong {
    font-size: 1.5em;
    line-height: .9em;
    text-decoration: underline;
    font-weight: 400;
    text-decoration-color: inherit;
    color: inherit;
}
  
.v1-new-hero h2 p em {
    text-decoration: line-through;
    font-weight: 400;
    text-decoration-color: inherit;
    color: inherit;
    font-style: normal;
}
	 
	 
.v1-new-hero h2 p {
    font-family: 'kapraregular';
    font-size: inherit;
    margin: 0px;
    line-height: .9em;
  text-align: center;
    letter-spacing: .5px;
    text-transform: uppercase;
    -webkit-font-smoothing: antialiased;
      text-decoration-color: inherit;
  color: inherit;

}
  
.v1-new-hero p {
    font-family: 'Avenir';
    margin: 15px;
    margin-bottom: 15px;
    text-align: center;
    margin-top: -15px;
    font-size: 22px;
    line-height: 26px;
  	color: #444754;
}
	 
.v1-new-hero .cta-button {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 32px;
    background: #193c3a;
    color: #ffffff;
    min-width: 300px;
    height: 45px;
    text-decoration: none;
    line-height: 1em;
    border-radius: 5px;
    font-family: 'Avenir';
    letter-spacing: 1px;
    font-size: 16px;
    font-weight: 700;
    text-transform: uppercase;
    text-align: center;
    padding: 5px;
    padding-top: 5px;
}
	 

	 
.v1-new-hero h2 {
    margin: 10px;
    margin-bottom: 30px;
    margin-top: 20px;
    animation-duration: 3s;
    animation-iteration-count: infinite;
  line-height:1em;
}
	 
	 @keyframes pulse {
	   0% {
  		 transform:scale(1);
	   }
	   30% {
  		 transform:scale(1.1);
	   }
	   60% {
  		 transform:scale(1);
	   }
	   100% {
  		 transform:scale(1);
	   }
	 }
  
  .flickity-prev-next-button {
    background: rgba(255, 255, 255, 0);
}
  
  .mobile-override-image {display:none;}
  
  
        @media only screen and (max-width: 1300px) {
.v1-new-hero p {
    font-size: 18px;
    line-height: 22px;
}
          
          .v1-new-hero h2 p {
    font-size: 44px;
    line-height: .9em;
}
        }
  
      @media only screen and (max-width: 800px) {

          .mobile-override-image {display:block;}

        
        
        .mobile-override-image {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}
  
  .v1-new-hero-overlay {
	max-width: 80%;
    margin-right: 0px;
    margin-left: 0px;
    align-self:center !important;
    position: absolute;
}
        
       .v1-feature-slider-section .v1-new-hero h2 p {
    font-size: .5em;
}
        
       .v1-feature-slider-section .v1-new-hero h2 {
         margin:0px;
    margin-bottom: 20px;
    margin-top: 10px;
}
        
       .v1-feature-slider-section .v1-new-hero {
    background-size: cover;
    background-repeat: no-repeat;
    background-position-y: 0;
             border-radius: 0px !important;
         min-height: 400px !important;
}
        
    .v1-feature-slider-section .v1-new-hero h3 p {
    font-family: 'kapraregular';
    text-align: center;
	font-size: 18px;
    margin: 0px;
    line-height: 1em;
    font-weight: 400;
    letter-spacing: .25px;
    text-transform: uppercase;
    -webkit-font-smoothing: antialiased;
    color: #ffffff;
    margin-bottom: 0px;
    padding: 3px;
    padding-right: 10px;
    padding-left: 10px;
    padding-top: 5px;
}
        
.v1-new-hero p {
    margin-bottom: 15px;
    margin-top: -10px;
    font-size: 14px;
    line-height: 18px;
}
        
.v1-feature-slider-section .v1-new-hero .cta-button {
    height: 40px;
    letter-spacing: 1px;
    font-size: 13px;
    padding-top: 7px;
  min-width:100%;
}
        
        
        .gallery-slide {
    height: 400px !important;
}
        
        
      }
  
  
  
  
  
  
</style>

{% schema %}
{
  "name": "Feature Slider Update",
  "class": "v1-feature-slider-section",

  "settings": [],
	 "blocks": [
    {
      "type": "select",
      "name": "Slide",
      "settings": [
	{
      "id": "v1-feature-1-image",
      "type": "image_picker",
      "label": "Slide Image"
    },
	{
   "type": "checkbox",
   "id": "v1-enable-overlay",
   "default": false,
   "label": "Enable Text Overlay"
	},
	{
   "type": "select",
   "id": "v1-overlay-alignment",
   "options": [
      { "value": "flex-start", "label": "Align Left"},
      { "value": "center", "label": "Align Center"},
      { "value": "flex-end", "label": "Align Right"}
   ],
   "label": "Overlay Alignment",
   "default":   "center"

	},

	{
      "id": "v1-feature-1-subheading",
      "type": "richtext",
      "label": "Slide Sub Heading",
	  "default": "<p>SAVE UP TO <strong>15% OFF</strong> - TODAY ONLY</p>"
    },    
	{
      "id": "v1-feature-1-heading",
      "type": "richtext",
      "label": "Slide Main Text",
	  "default": "<p>Vital Proteins <strong>Mega Sale</strong></p>"

    },
	{
    "type":      "range",
    "id":        "v1-feature-font-size",
    "min":       60,
    "max":        100,
    "step":       1,
    "unit":       "px",
    "label":     "Heading Font Size",
    "default":   60
	},
    {
      "id": "v1-feature-1-link",
      "type": "url",
      "label": "Slide Link"
    },
{
      "id": "v1-feature-1-button-text",
      "type": "text",
      "label": "Button Text"
    },
	{
      "id": "v1-feature-1-add-text",
      "type": "richtext",
      "label": "Additional Text",
	  "info": "Keep it short here..."
},
	{
  "type": "color",
  "id": "v1-feature-1-color",
  "label": "Section Main Color",
  "default": "#002d42"
	},
	{
  "type": "color",
  "id": "v1-feature-1-accent-color",
  "label": "Section Accent Color",
  "default": "#23b6e6"
	},
	{
   "type": "checkbox",
   "id": "v1-mobile-override",
   "default": false,
   "label": "Enable Mobile Graphic"
	},
	{
      "id": "v1-mobile-image",
      "type": "image_picker",
      "label": "Mobile Override Graphic"
    }
      ]
    }
  ],
    "presets": [
    {
      "name": "Featured Slider",
      "category": "V1 Sections",
      "blocks": [
        { 
          "type": "select"
        },
		{ 
          "type": "select"
        },
        {
          "type": "select"
        }
      ]
    }
  ]
}
{% endschema %}


