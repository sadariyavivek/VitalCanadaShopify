<style>
  .heroContainer {
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    background-image: url("{{ section.settings.hero-image | img_url: "2500x" }}");
      background-size: cover;
      background-repeat: no-repeat;
      background-position: 50% 30%;
      height: 800px;
      }

  .heroContent {
    position: absolute;
    bottom: 40px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .heroContent sup {
    font-size: 20px;
    top: 0;
    color: white;
    position: absolute;
    letter-spacing: 0.17px;
    font-family: 'KapraNeue' !important; 
  }

  .heroContent h1 {
    font-size: 120px;
    color: #ffffff;
    line-height: 1em;
    text-transform: uppercase !important;
    letter-spacing: -1px !important;
    text-align: center;
  }

  @media only screen and (max-width: 800px) {
    .heroContainer {
      height: 320px;
      background-image: url("{{ section.settings.hero-image | img_url: "800x" }}");
        }
    .heroContent h1 {
      font-size: 60px;
      color: #ffffff;
      line-height: 1em;
      text-align: center;
      margin-bottom: 8px;
    }
  }
</style>



<div class="newStyles2020">
  <div class="heroContainer">
    <div class="heroContent">
      <div class="container">
        <div class="banner_text">
          <h1>{{ section.settings.hero-text }}</h1>
          <button type="button" class="buttonWhite" onclick="window.location.href='{{ section.settings.hero-button-link }}'">{{ section.settings.hero-button-text }}</button>
        </div>
      </div>
    </div>
