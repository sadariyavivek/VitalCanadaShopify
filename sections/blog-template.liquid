{% paginate blog.articles by section.settings.blog_posts_per_page %}
</div>
  {% comment %}Check to see if sidebar should be enabled{% endcomment %}
  {% if section.blocks.size > 0 %}
    {% assign sidebar = true %}
  {% else %}
    {% assign sidebar = false %}
  {% endif %}


  <div class="tailwind">
    <div class="container" id="test">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-5 lg:gap-10 p-4 lg:p-10">
        {% for article in blog.articles %}
          <div class="flex flex-col">
            <a href="{{ article.url }}" title="{{ article.title | escape }}">
              <div class="lazyload h-60 lg:h-80 bg-cover" data-bg="{{ article.image | img_url: '600x', format: 'jpg' }}"></div>
            </a>
            <h2 class="font-header text-3xl mt-4">
              <a href="{{ article.url }}" class="font-header text-3xl leading-tight uppercase">{{ article.title }}</a>
            </h2>
            {% if section.settings.read_more_link %}
              <a href="{{ article.url }}" title="{{ article.title | escape }}" {% if settings.read_more_style == 'button' %}class="action_button continue-button"{% endif %}>{{ 'blogs.general.continue_reading_html' | t }}</a>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
  <br class="clear" />
  <div class="tailwind">
    <div class="container">
      {% include 'pagination' %}
      {% endpaginate %}
    </div>
  </div>
</div>

{% schema %}

{
  "name": "Blog",
  "class": "blog-section",
  "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Banner image",
        "info": "1600 x 600px recommended"
      },
      {
        "type": "image_picker",
        "id": "banner_wellness",
        "label": "Wellness Blog Banner image"
      },
      {
        "type": "image_picker",
        "id": "banner_beauty",
        "label": "Beauty Blog Banner image"
      },
      {
        "type": "image_picker",
        "id": "banner_recipes",
        "label": "Recipes Blog Banner image"
      },
      {
        "type": "image_picker",
        "id": "banner_lifestyle",
        "label": "Lifestyle Blog Banner image"
      },
      {
        "type": "checkbox",
        "id": "image_darken",
        "label": "Darken banner image",
        "default": false
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "Subheading",
        "default": "Subheading"
      },
      {
        "type": "range",
        "id": "blog_posts_per_row",
        "label": "Blog posts per row",
        "min": 1,
        "max": 4,
        "step": 1,
        "default": 3
      },
      {
        "type": "range",
        "id": "blog_posts_per_page",
        "label": "Blog posts per page",
        "min": 1,
        "max": 50,
        "step": 1,
        "default": 12
      },
      {
       "type": "checkbox",
       "id": "blog_tags",
       "label": "Show blog post tags"
      },
      {
       "type": "checkbox",
       "id": "blog_author",
       "label": "Show author"
      },

      {
       "type": "checkbox",
       "id": "blog_date",
       "label": "Show date",
       "default": true
      },
      {
       "type": "checkbox",
       "id": "blog_comment_count",
       "label": "Show comment count",
       "default": true
      },
      {
       "type": "checkbox",
       "id": "read_more_link",
       "label": "Show continue reading link for blog post excerpts",
       "default": true
      },
      {
       "type": "header",
       "content": "Sidebar"
      },
      {
        "type": "paragraph",
        "content": "Create a sidebar by adding content blocks."
      },
      {
        "type": "checkbox",
        "id": "toggle",
        "label": "Toggle sidebar content",
        "default": false
      }
  ],
  "blocks": [
    {
      "type": "post_tags",
      "name": "Blog post tags",
      "limit": 1
    },
    {
      "type": "menu",
      "name": "Menu",
      "settings": [
        {
          "type": "link_list",
          "id": "custom_menu_linklist",
          "label": "Menu"
        }
      ]
    },
    {
      "type": "newsletter",
      "name": "Newsletter sign up form",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "newsletter_title",
          "label": "Heading",
          "default": "Subscribe"
        },
        {
          "type": "richtext",
          "id": "newsletter_text",
          "label": "Subheading",
          "default": "<p>Sign up to get the latest on sales, new releases and more …</p>"
        }
      ]
    },
    {
      "type": "page",
      "name": "Page",
      "settings": [
        {
          "type": "page",
          "id": "content_page",
          "label": "Page"
        }
      ]
    },
    {
      "type": "recent_posts",
      "name": "Recent blog posts",
      "limit": 1,
      "settings": [
        {
          "type": "select",
          "id": "blog_post_count",
          "label": "Display blog posts",
          "options": [
            {
              "value": "2",
              "label": "2"
            },
            {
              "value": "5",
              "label": "5"
            },
            {
              "value": "10",
              "label": "10"
            }
          ],
          "default": "10"
        }
      ]
    },
    {
      "type": "search",
      "name": "Search form",
      "limit": 1
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Heading"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Text area can be used for details about blog authors or general information.</p>"
        }
      ]
    }
  ]
}

{% endschema %}
