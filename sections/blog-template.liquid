{% comment %}
** Main blog page - default view **
- Template section
- Uses blocks
{% endcomment %}

<style>
.tailwind .container:after {
    display:none;
}

#scroller::-webkit-scrollbar {
    width: 0px;  /* Remove scrollbar space */
    height:0px;
    background: transparent;  /* Optional: just make scrollbar invisible */
}

.paginate .current {
  background: #355C7E;
  color: white;
  font-weight: bold;
}

.paginate .page {
  margin-right: 8px;
  padding: 0.5rem 1rem;
}

.paginate a {
  color: #355C7E;
}
.brandTeaser {
  	margin-top: 3em!important;
}
</style>

<a name="pagecontent" id="pagecontent"></a>
{% assign category_banner = section.settings.image %}

{% if blog.handle == 'recipes' %}
    {% assign category_banner = section.settings.banner_recipes %}
{% elsif blog.handle == 'lifestyle' %}
	{% assign category_banner = section.settings.banner_lifestyle %}
{% elsif blog.handle == 'wellness' %}
	{% assign category_banner = section.settings.banner_wellness %}
{% elsif blog.handle == 'beauty' %}
	{% assign category_banner = section.settings.banner_beauty %}
{% endif %}

{% if category_banner != nil %}
<div class="tailwind">
  <header class="overflow-hidden max-h-screen w-full relative">
    <img  src="{{ category_banner | img_url: '100x' }}"
          alt="{% if category_banner.alt != blank %}{{ category_banner.alt }}{% else %}{{ blog.title | escape }}{% endif %}"
          class="lazyload object-cover object-center w-full"
          style="max-height:480px;object-position: center 30%;"
          data-src="{{ category_banner | img_url: '1400x', format: 'jpg' }}"
          sizes="100vw"
          srcset="{{ category_banner | img_url: '480x', format: 'jpg' }} 480w,
                  {{ category_banner | img_url: '765x', format: 'jpg' }} 765w,
                  {{ category_banner | img_url: '1400x', format: 'jpg' }} 1400w,
                  {{ category_banner | img_url: '2048x', format: 'jpg' }} 2048w"
           />
      {% if current_tags %}
        <div class="flex flex-col items-center justify-center absolute h-full w-full text-white px-10 mx-auto center top-0" style="background: #2121211f;">
          <h1 class="text-white">{{ current_tags }}</h1>
        </div>
      {% else %}
        <div class="flex flex-col items-center justify-center absolute h-full w-full text-white px-10 mx-auto center top-0" style="background: #2121211f;">
          <h1 class="text-white">{{ blog.title }}</h1>
          <p class="text-lg text-white">{{ blog.metafields.vital.subheader_text }}</p>
        </div>
      {% endif %}
  </header>
  </div>
{% endif %}

