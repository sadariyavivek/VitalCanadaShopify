    color: white;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .intro-container .intro-text-container h2 {
    color: white;
    text-transform: none;
    text-align: center;
    font-size: 90px;
    padding: 5%;
  }
  
  .one-oh-one-product-image-container {
    width: 50%;
  }
  
  .one-oh-one-product-image-container img {
    width: 80%;
    margin-left: auto;
    margin-right: auto;
    display: block;
  }
  
  .kit-description p {
    text-align: center;
    font-size: 24px;
    margin-top: 20px;
    margin-bottom: 20px;
  }
  
  .one-oh-one-product-info-container {
    width: 50%;
    padding-left: 20px;
    padding-right: 20px;
  }
  
  .one-oh-one-product-info-container .kit-title {
    color: {{ pinkColor }};
    text-transform: capitalize;
    font-size: 60px;
  }
  
  .one-oh-one-product-info-container .kit-price {
    font-size: 36px;
    letter-spacing: 0px !important;
    margin-top: 0;
  }
  
  .was-price-strikethrough {
    position: relative;
    color: {{ pinkColor}};
    opacity: 0.75;
  }
  
  .was-price-strikethrough:before {
    position: absolute;
    content: "";
    left: 0;
    top: 50%;
    right: 0;
    border-top: 2px solid;
    border-color: inherit;

    -webkit-transform:rotate(15deg);
    -moz-transform:rotate(15deg);
    -ms-transform:rotate(15deg);
    -o-transform:rotate(15deg);
    transform:rotate(15deg);
  }

  .one-oh-one-product-info-container .add_to_cart {
    width: 340px;
  }
  
  .benefits-callout {
    display: flex;
    flex-direction: row;
  }
  
  .benefits-callout .benefit-image-container {
    width: calc(100% / 6);
  }
  
  .benefits-callout .benefit-image-container img {
    width: 80%;
    margin-left: auto;
    margin-right: auto;
    display: block;
  }
  
  .collagen-101-section {
    background-color: white;
    text-align: center;
    padding: 40px
  }
  
  .collagen-101-section h2 {
    text-transform: capitalize;
    color: {{ pinkColor }};
    font-size: 96px;
    margin-top: 0;
    margin-bottom: 0;
    line-height: 96px;
  }
  
  .collagen-101-section h4 {
    text-transform: uppercase;
    color: {{ pinkColor }};
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 20px;
    margin-top: 20px;
    font-family: 'Avenir';
    opacity: 0.6;
  }
  
  .collagen-101-section .facts-container {
    padding: 20px;
    display: flex;
    justify-content: space-around;
    align-items: flex-start;
    width: 80%;
    margin: 0px auto;
    flex: 3;
  }
  
  .collagen-101-section .facts-container .fact-container {
    flex: 1;
    padding-left: 5%;
    padding-right: 5%;
    width: 25%;
  }
  
  
  .collagen-101-section .facts-container .fact-container img {
    width: auto;
    height: 70px;
  }
  
  .collagen-101-section .facts-container .fact-container p {
    font-family: 'Avenir';
    color: #4a4a4a;
    font-size: 18px;
  }
  
  .collagen-101-section .facts-container .fact-container:not(:last-child) {
    border-right: 2px solid {{ yellowColor }};
  }
  
  .cl-recipes-section {
    margin-top: 40px;
    padding-left: 60px;
    padding-right: 60px;
    
    background-color: {{ yellowColor }};
  }
  
  .cl-recipes-section h3 {
    text-align: center;
    font-size: 36px;
    letter-spacing: 1px !important;
  }
  
  .cl-blog-article-outer-container {
    display: flex;
    flex-direction: row;
    width: 80%;
    width: 80%;
    text-align: center;
    margin-left: auto;
    margin-right: auto;
  }
  
  .cl-blog-article-container {
    width: 33%;
    padding: 20px;
  }
  
  .cl-blog-article-container img {
    border-radius: 20px;
    width: 100%;
    transition: 1s all cubic-bezier(0.19, 1, 0.22, 1);
  }
  
  .cl-blog-article-container h4 {
    color: white;
    letter-spacing: 1px !important;
    font-size: 32px;
    transition: .3s opacity ease-out;
    text-align: center;
  }
  
