{% assign pinkColor = '#ffc7e0' %}
{% assign redColor = '#fb5373' %}
{% assign product = all_products['beauty-collagen-watermelon-mint'] %}
<style>
  .container.main.content {
    padding: 0;
  }
  
  .watermelon-banner-section-container {
    background-size: cover;
    background-position: 50%;
    background-image: url("{{ section.settings.top_banner_image | img_url: '2000x' }}");
    height: calc(100vw / {{ section.settings.top_banner_image.aspect_ratio }});
    display: flex;
    justify-content: flex-end;
    align-items: center;
  }
  
  .watermelon-banner-section-container h2 {
    color: white;
    text-transform: none;
    font-size: 72px;
    text-align: center;
    line-height: 72px;
  }
  
  .watermelon-banner-section-container .text-container {
    width: 50%;
    margin-right: 10%;
    padding-right: 20px;
    padding-left: 20px;
  }
  
  .watermelon-banner-section-container .toptext {
    font-style: italic;
  }
  
  .watermelon-banner-section-container .subtext {
    color: {{ redColor }};
  } 
  
  .watermelon-cta-section-container {
    padding-left: 40px;
    padding-right: 40px;
  }
  
  .cta-block {
    display: flex;
    padding: 20px 0 !important;
    align-items: center;
  }
  
  .cta-block .cta-info-container {
    width: 50%;
    padding: 20px;
  }
  
  .cta-block .cta-info-container .add_to_cart {
    font-family: 'kapraregular';
    text-transform: uppercase;
    letter-spacing: 1px;
    max-width: 320px;
    font-size: 28px;
    height: auto;
    min-height: 0;
    padding: 10px;
    float: right;
  }
  
  .cta-block .cta-info-container .product-title {
    color: {{ redColor }};
    text-transform: none;
    font-size: 60px;
	text-align: right;
    margin-bottom: 0;
    line-height: 60px;
  }
  
  
  .cta-block .cta-info-container .product-price {
    font-size: 48px;
    text-align: right;
    letter-spacing: 1px !important;
  }
  
  .cta-block .cta-image-container {
    width: 50%;
    padding: 20px;
  }
  
  .cta-block .cta-image-container img {
    width: 75%;
  }
  
  .callout-blocks {
    text-align: center;
    position: relative;
    max-width: 1400px;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 80px;
  }
  
  .primary-block {
    background-color: {{ pinkColor }};
    color: white;
    width: 100%;
  }
  
  .primary-block p {
    font-weight: bold;
    font-size: 24px;
    margin-top: 0px;
    margin-bottom: 0px;
   	padding: 20px 40px;
  }
  
  .secondary-block {
    background-color: {{ redColor }};
    height: 100%;
    width: 100%;
    position: absolute;
    top: 20px;
    left: -20px;
    z-index: -10;
  }
  
  .icons-container {
    display: flex;
    width: 80%;
    margin-left: auto;
    margin-right: auto;
    flex-wrap: wrap;
  }
  
  .icon-container {
    width: 25%;
  }
  
  .icon-container img {
    width: 100%;
    height: auto;
  }
  
  .watermelon-recipe-section-container {
    background-size: cover;
    background-position: 50%;
    background-image: url({{ section.settings.recipe_background | img_url: '1400x' }});
    text-align: center;
    padding-bottom: 80px;
    padding-top: 20px;
  }
  
  .watermelon-recipe-section-container h4 {
    text-transform: none;
    letter-spacing: 1px !important;
    color: white;
    font-size: 72px;
    text-shadow: 6px 4px 4px rgba(0,0,0,0.1);
    margin-top: 20px;
    margin-bottom: 0;
  }
  
  .watermelon-recipe-section-container h4 > span {
    color: {{ redColor }};
  }
  
  .recipe-image-container {
    padding-left: 20px;
    padding-right: 20px;
    width: 100%;
    margin-left: auto;
    margin-right: auto;
  }
  
  .recipe-image-container img {
    width: 80%;
    margin-left: auto;
    margin-right: auto;
  }
  
  .flickity-page-dots .dot {
    background: #22af91;
    height: 20px;
    width: 20px;
  }
  
  .flickity-prev-next-button {
    width: 60px;
    height: 44px;
    border-radius: 100%;
    top: 50%;
  }
  
  @media screen and (max-width: 1200px) {
    .watermelon-banner-section-container h2 {
      font-size: 48px;
      line-height: 48px;
    }
  }
  
  @media screen and (max-width: 800px) {
    .watermelon-banner-section-container h2 {
      font-size: 36px;
      line-height: 36px;
    }
    
    .cta-block {
      flex-direction: column-reverse;
    }
    
    .cta-block .cta-info-container {
      width: 100%;
    }
    
    .cta-block .cta-image-container {
      width: 100%;
    }
    
    .cta-block .cta-image-container img {
      display: block;
      margin-left: auto;
      margin-right: auto;
    }
    
    .cta-block .cta-info-container .product-title {
      text-align: center;
    }
    
    .cta-block .cta-info-container .product-price {
      text-align: center;
    }
    
    .cta-block .cta-info-container .add_to_cart {
      float: none;
      display: block;
      margin-left: auto;
      margin-right: auto;
    }
    
    .container.recipe-slider-container {
      width: auto;
    }
    
    .recipe-image-container img {
      width: 100%;
    }
  }
  
  @media screen and (max-width: 600px) {
    .watermelon-banner-section-container h2 {
      font-size: 18px;
      line-height: 18px;
    }
    
    .watermelon-recipe-section-container h4 {
      font-size: 36px;
    }
    
    .icon-container {
      width: 50%;
    }
    
    .cta-block .cta-info-container .product-title {
      text-align: center;
      font-size: 36px;
      line-height: 36px;
    }
    
    .cta-block .cta-info-container .product-price {
      text-align: center;
      font-size: 36px;
      line-height: 36px;
    }
  }
  
  @media screen and (max-width: 400px) {
    .watermelon-banner-section-container h2 {
      font-size: 16px;
      line-height: 16px;
    }
    
    .cta-block .cta-info-container .product-title {
      text-align: center;
      font-size: 36px;
      line-height: 36px;
    }
    
    .cta-block .cta-info-container .product-price {
      text-align: center;
      font-size: 36px;
      line-height: 36px;
    }
    
    .primary-block p {
      font-size: 18px;
    }
  }
</style>
<div class="watermelon-landing-container">
  <div class="watermelon-banner-section-container">
    <div class="text-container">
      <h2 class="toptext">Your Summer Forecast Called</h2>
      <h2 class="subtext">it's Watermelon Mint Beauty Collagen season</h2>
    </div>
  </div>
  <div class="watermelon-cta-section-container">
